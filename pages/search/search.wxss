@import '../../weui.wxss';

.header {
  width: 95%;
  position: fixed;
  justify-content: center;
  display: flex;
  height: 7%;
  align-items: center;
}

.outertable {
  width: 95%;
  position: fixed;
  height: 85%;
  top: 11%;
  overflow: auto;
}
   
.input { 
    border: 1px solid #ccc;
    border-radius: 20px;
    height: 100%;
    width: 100%;
    line-height: 100%;
    text-align: center;
}

.table {
  border: 0px solid darkgray;
  width: 100%;
  height: 100%
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.bg-head{
  background: #E6E6FA;
}
.tr-none{
  display: none;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  background: #DCDCDC;
}
.th {
  width: 100%;
  justify-content: center;
  background: #808080;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.td-name {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-mobile {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-city {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-status {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
    overflow: scroll;
    white-space:nowrap;
    padding: 5rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}