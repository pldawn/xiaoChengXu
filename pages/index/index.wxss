@import '../../weui.wxss';

.header {
  width: 95%;
  position: fixed;
  justify-content: center;
  background: #808080;
  color: #fff;
  display: flex;
  height: 10%;
  align-items: center;
}

.outertable {
  width: 95%;
  position: fixed;
  height: 67%;
  top: 12%;
  overflow: auto;
}

.table {
  width: 100%;
  line-height: 100%;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.bg-content{
  background: #DCDCDC;
}

.footer {
  position: fixed;
  bottom: 0%; 
  height: 20%;
  width: 95%;
}

.input {
  width: 100%;
  height: 90%;
  border: 1px solid darkgray;
  border-radius: 5px;
  text-align: center;
}