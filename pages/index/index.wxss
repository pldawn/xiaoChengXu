.table {
  border: 0px solid darkgray;
  width: 95%;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.bg-head{
  background: #E6E6FA;
}
.bg-content{
  background: #DCDCDC;
}
.th {
  width: 100%;
  justify-content: center;
  background: #808080;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.td-name {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-mobile {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-city {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-status {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
    overflow: scroll;
    white-space:nowrap;
    padding: 5rpx;
}