@import '../../weui.wxss';

.header {
  width: 95%;
  position: fixed;
  justify-content: center;
  background: #fff;
  color: #000000;
  display: flex;
  height: 5%;
  align-items: center;
  border: 1px solid darkgray;
  border-radius: 25px;
  font-size: 80%;
}

.header2 {
  width: 95%;
  position: fixed;
  top: 8%;
  justify-content: center;
  color: #000;
  display: flex;
  height: 8%;
  align-items: center;
}

.outertable {
  width: 95%;
  position: fixed;
  height: 63%;
  top: 16%;
  overflow: auto;
}

.table {
  border: 0px solid darkgray;
  width: 100%;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.bg-head{
  background: #E6E6FA;
}
.bg-content{
  background: #DCDCDC;
}
.th {
  width: 100%;
  justify-content: center;
  background: #808080;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.td-name {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-mobile {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-city {
    width:20%;
    justify-content: center;
    text-align: center;
    font-size:85%;
}
.td-status {
    width:30%;
    justify-content: center;
    text-align: center;
    font-size:85%;
    overflow: scroll;
    white-space:nowrap;
    padding: 5rpx;
}

.footer {
  position: fixed;
  bottom: 0%; 
  height: 20%;
  width: 95%;
}

.input {
  border-left: 1px solid darkgray;
  text-align: center;
  height: 85%;
  width: 90%;
  font-size: 85%;
}

.inputnoborder {
  text-align: center;
  height: 85%;
  width: 90%;
  font-size: 85%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}